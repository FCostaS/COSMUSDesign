<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="world" default="empty"/>
  <arg name="paused" default="true"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="verbose" value="true" />
  <arg name="model" default="$(find aircraft_description)/cessna_c172/cessna.xacro"/>
  <arg name="wifi_model" default="$(find aircraft_description)/wireless/wifi_transmitter.xacro"/>

  <env name="GAZEBO_MODEL_PATH" value="${GAZEBO_MODEL_PATH}:$(find aircraft_description)"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find aircraft_gazebo)/worlds/mybot.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="verbose" value="true" />
  </include>

  <!-- UAV -->
  <group ns="/uav1">
      <arg name="uav" default="uav1"/>

      <!-- Load the URDF into the ROS Parameter Server -->
      <param name="/uav1/robot_description" command="$(find xacro)/xacro '$(arg model)' namespace:=uav1"/>

      <!-- <param name="/uav1/robot_description" command="cat $(find aircraft_description)/cessnac172/model.sdf"/> -->

      <!-- Run a python script to the send a service call to gazebo_ros to spawn a URDF robot -->
      <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
            args="-param robot_description -urdf -model uav1 -x 0.0 -y 0.0 -z 0.1"/>

  </group>

</launch>
